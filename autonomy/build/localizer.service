[Unit]
Description=Localizer service for managing the robot location
StartLimitIntervalSec=0
PartOf=robot.service
After=robot.service

[Service]
Type=idle
Restart=always
RestartSec=2
WorkingDirectory=/home/robopi/2020/autonomy/localizer
ExecStart=/home/robopi/2020/autonomy/localizer/localizer.sh

[Install]
WantedBy=robot.service